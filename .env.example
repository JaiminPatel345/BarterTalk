# BarterTalk Backend Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=production

# ========================================
# DATABASE
# ========================================
MONGO_URI=mongodb://localhost:27017/bartertalk
# Or use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/bartertalk?retryWrites=true&w=majority

# ========================================
# JWT & SECURITY
# ========================================
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# ========================================
# CORS - Frontend URLs
# ========================================
# Production frontend URL
REACT_APP_URL=https://your-frontend-domain.vercel.app

# Optional: Second frontend domain (staging, etc.)
REACT_APP_URL2=https://your-staging-domain.vercel.app

# ========================================
# CLOUDINARY (for file uploads)
# ========================================
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
